<section class='p-4 bg-light'>
  <h1 class='text-secondary text-center text-success'>Bienvenido
    {{user.name}}</h1>

  <div class='mb-3'>
    <div>
      <label class='form-label fw-bold text-secondary fs-3' for='login'>Tus
        datos son:</label>
      <div>
        usuario:
        {{user.username}}
        <br />
        Nombre:
        {{user.name}}
        <br />
        Direccion:
        {{user.address}}
        <br />
        Edad:
        {{user.age}}
        <br />
        Telefono:
        {{user.phone}}
        <br />
        Imagen:
        {{user.url}}
      </div>
    </div>
    <br />
    <button type='button' class='btn btn-outline-danger'><a
        href='/logout'
        style='text-decoration: none;'
      >Salir</a></button>
  </div>
</section>

